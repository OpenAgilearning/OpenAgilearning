template(name="settings")
  +profile
template(name="profile")
  .container
    .row.clearfix
      .col-md-3.column
      .col-md-6.column
        +public_profile

template(name="public_profile")
  h2 {{user.profile.name}}
  hr
  ul
    li country : {{user.profile.country}}
    li city : {{user.profile.city}}
  dl
    dt
      h2 email(must be public)
    dd
      input.profile.email(type="email", value="{{user.profile.email}}")

  .show-profile
    if user.profile.email
      h3 email: {{user.profile.email}}
        input.edit-email(value="edit" type="button")
    else
      h3 email: please set email
          input.edit-email(value="edit" type="button")

  .edit-profile
    if user.profile.email
      +autoForm id="profileUpdate" schema="SettingSchema" type="method" meteormethod="updateProfile"
        p new email
        +afFieldInput name="email"
        br
        input.btn.btn-primary(type="submit")
    else
      +autoForm id="profileCreate" schema="SettingSchema" type="method" meteormethod="createProfile"
        +afFieldInput name="email"
        br
        input.btn.btn-primary(type="submit")

