template(name="layout")
  +navBar
  +yield

template(name="navBar")
  .navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle(type="button",data-toggle="collapse",data-target=".navbar-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="/") Docker Data Tutor
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li.nav.navbar-nav
            a(href="{{pathFor 'ipynb'}}") IPyNB

          li.nav.navbar-nav
            a(href="{{pathFor 'rstudio'}}") RStudio



        ul.nav.navbar-nav.navbar-right
          li.nav.navbar-nav
            img(src="{{user.profile.photo.thumb_link}}")
          li
            +loginButtons

template(name="analyzer")
  .container
    a.btn.btn-default(target="_blank",href="{{baseImageUrl}}") Base image on Docker Hub      
    hr
    a.goBt.btn.btn-default(target="_blank",href="http://10.255.252.206:{{ipynb.port}}") Go to {{name}} page  
    hr
  .container
    .tabbable
      .tab-pane.active
        

        input.connectBt.btn.btn-default(value="Connect to {{name}}")        
        iframe#ipynbframe(src="", width="100%", height="550px")
          p Your browser does not support iframes.

template(name="pleaseLogin")
  h2 Please Login ! 

template(name="index")
  h2 Please Choose the Analyzer:
  ul
    li IPyNB
    li RStudio

  h2 Reference
  ul
    li 
      a(href="http://www.shogun-toolbox.org/") shogun
    li
      a(href="http://nbviewer.ipython.org/github/shogun-toolbox/shogun/blob/master/doc/ipython-notebooks/metric/LMNN.ipynb") LMNN demo ipynb