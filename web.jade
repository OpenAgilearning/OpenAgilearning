template(name="course")
  .container
    .row.clearfix
      //- .col-md-6.column
        
      .col-md-12.column
        
        hr
        h2 Docker:
        //- input.connectBt.btn.btn-default(value="Try Docker Instance:")        
        iframe#docker(src="http://{{rootURL}}:{{docker.port}}", width="100%", height="550px", scrolling="yes")

        hr
        h2 Reference: 
        iframe#slides(src="{{course.slides}}", width="100%", height="550px", scrolling="auto")
      




template(name="courses")
  .container
    .row.clearfix
      .col-md-12.column
        table.table.table-hover
          thead
            th Name
            th Docker
            th Ref. (Slide/Note/Site)
            th Description
            th Creator's Name
            th Create / Delete
          tbody
            if isCreator
              tr
                td 
                  input.courseName
                td
                  input.dockerImage
                td
                  input.slides
                td
                  input.description
                td
                  p {{user.profile.name}}    
                td
                  input.createBt.btn.btn-default(value="Create")

            each courses
              tr
                td 
                  a(href="{{pathFor 'course' cid=_id}}") {{courseName}}
                td 
                  a(target="_blank",href="https://registry.hub.docker.com/u/{{dockerImage}}") {{dockerImage}}
                td 
                  a(target="_blank",href="{{slides}}") Link
                td {{description}}
                td {{creatorName}}
                td unfeatured 




template(name="analyzer")
  .container
    a.btn.btn-default(target="_blank",href="{{baseImageUrl}}") Browse Base Image ({{docker.baseImage}}) on Docker Hub      
    hr
    //- a.goBt.btn.btn-default(target="_blank",href="http://{{rootURL}}:{{docker.port}}") Go to {{name}} page  
    //- hr
  .container
    .tabbable
      .tab-pane.active
        
        //- input.connectBt.btn.btn-default(value="Try {{name}}")        
        iframe#docker(src="http://{{rootURL}}:{{docker.port}}", width="100%", height="550px", scrolling="yes")
          p Your browser does not support iframes.

