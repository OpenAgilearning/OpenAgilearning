template(name="courses")
  .container
    .row.clearfix
      .col-md-12.column
        +voteForMe
        h2 Study Materials:
        table.table.table-hover
          thead
            th Name
            th Docker
            th Ref. (Slide/Note/Site)
            th Description
            th Creator's Name
            th Create / Delete
          tbody
            if isCreator
              tr
                td 
                  input.courseName
                td
                  input.dockerImage
                td
                  input.slides
                td
                  input.description
                td
                  p {{user.profile.name}}    
                td
                  input.createBt.btn.btn-default(value="Create")

            each courses
              tr
                td 
                  a(href="{{pathFor 'course' cid=_id}}") {{courseName}}
                td 
                  a(target="_blank",href="https://registry.hub.docker.com/u/{{dockerImage}}") {{dockerImage}}
                td 
                  a(target="_blank",href="{{slides}}") Link
                td {{description}}
                td {{creatorName}}
                td unfeatured 




