template(name="resume")
  img(src="{{user.profile.photo.photo_link}}").img-rounded
  h2 {{field "name"}}
  if field "email"
    p {{field "email"}}
  if field "hometown"
    p {{field "hometown"}}

template(name="resume_setting")
  h2 Resume Setting
  //- +reactiveTable settings=settings
  +quickForm id="profileUpdate" schema="profileSchema" type="method" meteormethod="updateResume" doc=doc
  
  //- each resume
  //-   p {{key}},{{value}},{{isPublic}}
template(name="edit_value")
  +autoForm id=this.key type="update" collection="db.publicResume" doc=this autosave=true schema=schema
    +afFormGroup name="value" label=false