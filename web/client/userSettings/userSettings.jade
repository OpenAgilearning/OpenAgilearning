template(name="userSettings")
  .container
    .row.clearfix
      .col-md-3.column
        +resume
      .col-md-9.column
        ul.nav.nav-tabs
          li.active
            a(data-toggle="tab", href="#Env")
              |#[i.fa.fa-cube]
              | Environment
          li
            a(data-toggle="tab", href="#Course")
              |#[span(aria-hidden="true").glyphicon.glyphicon-book]
              | Course
          li
            a(data-toggle="tab", href="#Profile")
              |#[span(aria-hidden="true").glyphicon.glyphicon-user]
              | Profile
          li
            a(data-toggle="tab", href="#Privacy")
              i.fa.fa-user-secret
              | Privacy


        .tab-content
          .tab-pane.fade.in.active#Env
            +envPageEnvUserConfigsBlock
            +envsPageDockerInstancesBlock

          .tab-pane.fade.in#Course
            h3 Enrolled Classrooms
            p You can view all enrolled classrooms and courses.
            h3 My Favorite

            h3 Watch List
            p It would be awesome if these courses are ready!

          .tab-pane.fade.in#Profile

            +resume_setting

          .tab-pane.fade.in#Privacy

            +privacy_setting



